FROM gradle:6.2.1-jdk13 as build

COPY . /backend
WORKDIR /backend

RUN ./gradlew recording-service:quarkusBuild --uber-jar

FROM adoptopenjdk:13-jre-hotspot

COPY --from=build /backend/recording-service/build/recording-service-1.0-SNAPSHOT-runner.jar /usr/app/service-runner.jar

WORKDIR /usr/app/

CMD ["java", "-jar", "service-runner.jar"]
