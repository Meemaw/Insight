FROM gradle:6.2.2-jdk13 as build

COPY . /backend
WORKDIR /backend

RUN ./gradlew auth-service:quarkusBuild --uber-jar

FROM adoptopenjdk:13-jre-hotspot

COPY --from=build /backend/auth-service/build/auth-service-1.0-runner.jar /usr/app/service-runner.jar

WORKDIR /usr/app/

CMD ["java", "-jar", "service-runner.jar"]
